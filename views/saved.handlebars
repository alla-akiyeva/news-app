<div class="container">

{{!--Image Card--}}
<div class="row">
  <div class="column">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Mongo Scraper</span>
        <p>WSJ | Tech</p>
      </div>
      <div class="card-action">
        <a class="waves-effect waves-light btn" href="/scrape">Scrape</a>
        <a class="waves-effect waves-light btn" id="savedArticles" href="/saved">Saved Articles</a>
        <a class="waves-effect waves-light btn" href="/clear">Clear</a>
      </div>
    </div>
  </div>
</div>


  <table>
      <tbody>

        {{#if articles}}
          {{#each articles}}
          <tr>
              <td><a href="{{this.link}}">{{this.title}}</a></td>
              <td><button data-target="#modal1"href="#modal1" class="btn-small addComment modal-trigger" data-id="{{this.id}}">Comment</button></td>
              <td><button data-target="modal1" class="btn modal-trigger" href="#modal1">Modal</button></td>
              {{!-- <td><a class="waves-effect waves-light btn view" onclick="$('#modal1').modal('open');">View Scores</a></td> --}}
              <td><a class="btn-small delete" data-id="{{this.id}}">Delete</a></td>
          </tr>

          
          {{/each}}
          {{else}}
            <td>You have not saved any articles.</td>
        {{/if}}
        
      </tbody>
  </table>

