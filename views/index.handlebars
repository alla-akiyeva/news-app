<div class="container">

{{!--Image Card--}}
<div class="row">
    <div class="column">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Mongo Scraper</span>
          <p>WSJ | Tech</p>
        </div>
        <div class="card-action">
          <a class="waves-effect waves-light btn" href="/scrape">Scrape</a>
          <a class="waves-effect waves-light btn">Saved Articles</a>
          <a class="waves-effect waves-light btn" href="/">Clear</a>
        </div>
      </div>
    </div>
  </div>


    <table>
        <tbody>
          {{#if articles}}
            {{#each articles}}
            <tr>
                <td><a href="{{this.link}}">{{this.title}}</a></td>
                <td><a class="btn-small">Save</a></td>
            </tr>
            {{/each}}
            {{else}}
              <td>You have not scraped any articles yet.</td>
          {{/if}}
        </tbody>
    </table>
    

</div>
      

